{
  "templates": {
    "FireResistance": {
      "description": "Fire Resistance template - Reduces fire damage taken",
      "sources": [
        {
          "type": "constant",
          "value": "{{base_fire_resistance}}",
          "name": "Base fire resistance (%)"
        },
        {
          "type": "scaling",
          "base": 0.0,
          "scale": "{{fire_res_per_level}}",
          "level": "{{level}}",
          "name": "Level-based fire resistance scaling"
        }
      ],
      "transforms": [
        {
          "type": "map",
          "dependencies": ["Vitality"],
          "multiplier": 0.2,
          "name": "Fire resistance from Vitality (Vitality * 0.2%)"
        },
        {
          "type": "additive",
          "value": "{{fire_res_bonus}}",
          "name": "Equipment fire resistance bonus"
        },
        {
          "type": "conditional",
          "condition_stat": "Vitality",
          "condition_value": 50.0,
          "operator": ">=",
          "then": {
            "type": "additive",
            "value": 5.0,
            "name": "+5% fire resistance (High Vitality - Natural Resistance)"
          },
          "else_then": null
        },
        {
          "type": "clamp",
          "min": 0.0,
          "max": 90.0,
          "name": "Fire resistance bounds (0-90%)"
        }
      ]
    },
