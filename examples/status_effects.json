      "description": "Bleed Damage template - Damage over time effect",
      "sources": [
        {
          "type": "constant",
          "value": "{{base_bleed_damage}}",
          "name": "Base bleed damage per second"
        },
        {
          "type": "scaling",
          "base": 0.0,
          "scale": "{{bleed_per_level}}",
          "level": "{{level}}",
          "name": "Level-based bleed damage scaling"
        }
      ],
      "transforms": [
        {
          "type": "map",
          "dependencies": ["ATK"],
          "multiplier": 0.1,
          "name": "Bleed damage from ATK (ATK * 0.1)"
        },
        {
          "type": "multiplicative",
