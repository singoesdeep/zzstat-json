{
  "templates": {
    "ExperienceGain": {
      "description": "Experience Gain template - Multiplier for experience gained from kills",
      "sources": [
        {
          "type": "constant",
          "value": 1.0,
          "name": "Base experience multiplier (100%)"
        },
        {
          "type": "scaling",
          "base": 0.0,
          "scale": "{{exp_per_level}}",
          "level": "{{level}}",
          "name": "Level-based experience gain scaling"
        }
      ],
      "transforms": [
        {
          "type": "additive",
          "value": "{{exp_bonus}}",
          "name": "Equipment experience bonus (e.g., +0.1 = +10%)"
        },
        {
          "type": "multiplicative",
          "value": "{{exp_multiplier}}",
          "name": "Experience multiplier (buffs, potions, etc.)"
        },
        {
          "type": "conditional",
          "condition_stat": "Level",
          "condition_value": 10.0,
          "operator": ">=",
          "then": {
            "type": "multiplicative",
            "value": "{{then_multiplier}}",
            "name": "Conditional experience bonus (e.g., VIP status, event bonus)"
          },
          "else_then": {
            "type": "multiplicative",
            "value": 1.0,
            "name": "No conditional bonus"
          }
        },
        {
          "type": "clamp",
          "min": 0.1,
          "max": 10.0,
          "name": "Experience gain bounds (10% - 1000%)"
        }
      ]
    }
  }
}

