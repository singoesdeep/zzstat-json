{
  "templates": {
    "HealthRegeneration": {
      "description": "Health Regeneration template - HP per second regeneration",
      "sources": [
        {
          "type": "constant",
          "value": "{{base_hp_regen}}",
          "name": "Base HP regeneration per second"
        },
        {
          "type": "scaling",
          "base": 0.0,
          "scale": "{{hp_regen_per_level}}",
          "level": "{{level}}",
          "name": "Level-based HP regeneration scaling"
        }
      ],
      "transforms": [
        {
          "type": "map",
          "dependencies": [
            "Vitality"
          ],
          "multiplier": 0.5,
          "name": "HP regeneration from Vitality (Vitality * 0.5 HP/s)"
        },
        {
          "type": "additive",
          "value": "{{hp_regen_bonus}}",
          "name": "Equipment HP regeneration bonus"
        },
        {
          "type": "multiplicative",
          "value": "{{hp_regen_multiplier}}",
          "name": "HP regeneration multiplier (buffs, potions)"
        },
        {
          "type": "conditional",
          "condition_stat": "Vitality",
          "condition_value": 50.0,
          "operator": ">=",
          "then": {
            "type": "multiplicative",
            "value": 1.5,
            "name": "+50% HP regeneration (High Vitality - Rapid Recovery)"
          },
          "else_then": {
            "type": "multiplicative",
            "value": 1.0,
            "name": "No bonus"
          }
        },
        {
          "type": "conditional",
          "condition_stat": "Vitality",
          "condition_value": 80.0,
          "operator": ">=",
          "then": {
            "type": "multiplicative",
            "value": 1.3,
            "name": "+30% additional HP regeneration (Very High Vitality - Regeneration Master)"
          },
          "else_then": null
        },
        {
          "type": "clamp",
          "min": 0.0,
          "max": "{{max_hp_regen}}",
          "name": "Maximum HP regeneration limit"
        }
      ]
    }
  }
}